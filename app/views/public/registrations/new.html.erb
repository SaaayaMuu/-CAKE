<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
  <%= f.label :"性" %>
  <%= f.text_field :last_name %>
  <%= f.label :"名" %>
  <%= f.text_field :first_name %>
</div>

<div class="field">
  <%= f.label :"性(カナ)" %>
  <%= f.text_field :last_name_kana %>
   <%= f.label :"名(カナ)" %>
  <%= f.text_field :first_name_kana %>
</div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :"郵便番号(ハイフンなし)"%><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :"住所"%><br />
    <%= f.text_area :address, autofocus: true, autocomplete: "address" %>
  </div>
  
    <div class="field">
    <%= f.label :"電話番号(ハイフンなし)"%><br />
    <%= f.telephone_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
