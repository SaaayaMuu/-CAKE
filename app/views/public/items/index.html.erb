<body>

<div class="row mb-5 justify-content-center">
  <h2 class="mt-5">商品一覧<span style="font-size:20px">(全<%= @all_items_count %>件)</span></h2>
</div>


<div class="row justify-content-center">
  <% @items.each do |item| %>
    <div>
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image, size:"200x200", class:"border mx-5" %>
      <div class="mx-5">
        <p class="text-dark font-weight-bold"><%= item.name %></p>
        <p class="text-dark font-weight-bold"><%= "￥" %><%= item.with_tax_price %></p>
      </div>
    </div>
  <% end %>
  <% end %>
</div>



<div class="row mt-4 justify-content-center">
<p><%= paginate @items %></p>
</div>

</body>