


<div class="row mb-5 justify-content-center">
  <h2 class="mt-5">商品一覧</h2>
</div>

<div class="row justify-content-center">
  <% @items.each do |item| %>
  <div>
    <%= image_tag item.get_image, size:"200x200", class:"border mx-5" %>
    <div class="mx-5">
    <p><%= item.name %></p>
    <p><%= "￥" %><%= item.price %></p>
    </div>
  </div>

  <% end %>
</div>