
  <div class="container mt-4">
    
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-4 col-lg-4  col-lg-4 text-center"><%= image_tag @item.get_image, size:"200x200"%></div>
      
      <div class="col-5 col-sm-5 col-md-8 col-lg-6 col-xl-6">
        
        <h4 class="font-weight-bold"><%= @item.name %></h4>
        <p class="font-weight-bold"><%= @item.introduction %></p>
        </br>
        <% if @item.is_active == true %>
        <p><span style="font-size:1.5em;">￥<%= @item.with_tax_price %></span>(税込)</p>
        
      
        <%= form_with model: @cart_item, url: cart_items_path, method: :post  do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        </br>
        <p>
          <%= f.select :amount, *[1..5], :include_blank => "個数選択" %>
          <%= f.submit "カートに入れる", class: "btn btn-sm btn-success ml-4 px-4 py-2" %>
        </p>
        <% end %>
        <% else %>
        <p>売り切れ</p>
        <% end %>
      </div>
    </div>
 </div>  
