<div class="container mt-4">
    <%= form_with model: @customer, url: customers_path do |f| %>
    <div class="row mb-3">
      <p class="col-8 col-sm-7 col-xl-4">
        <span class="lead px-2">会員情報編集</span>
        </p>
    </div>
    
        <div class="row mb-2">
        <label for="customer_name" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">氏名</label>
        <%= f.text_field :last_name, autofocus: true, id:"customer_Last_name", placeholder: "Name", class: "mr-3" %>
        <%= f.text_field :first_name, autofocus: true, id:"customer_First_name", placeholder: "Name" %>
        </div>
        
        <div class="row mb-2">
        <label for="customer_last_name_kana" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">フリガナ</label>
        <%= f.text_field :last_name_kana, autofocus: true, id:"customer_Last_name_kana", placeholder: "Name", class: "mr-3" %>
        <%= f.text_field :first_name_kana, autofocus: true, id:"customer_First_name_kana", placeholder: "Name" %>
        </div>
        
        <div class="row mb-2">
        <label for="customer_postal_code" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">郵便番号</label>
        <%= f.text_field :postal_code, autofocus: true, id:"customer_Postal_code", placeholder: "postal_code" %>
        </div>
        
        <div class="row mb-2">
        <label for="customer_address" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">住所</label>
        <%= f.text_area :address, autofocus: true, id:"customer_address", placeholder: "address", :size => "50%" %>
        </div>
        
        <div class="row mb-2">
        <label for="customer_telephone_number" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">電話番号</label>
        <%= f.text_field :telephone_number, autofocus: true, id:"customer_Telephone_number", placeholder: "telephone_number" %>
        </div>
        
        <div class="row mb-2">
        <label for="customer_email" class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label">メールアドレス</label>
        <%= f.text_field :email, autofocus: true, id:"customer_email", placeholder: ":email" %>
        </div>
        
        
        <div class="row mb-2">
        <label class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 col-form-label"></label>
        <span class="mr-1">
           <%= f.submit "編集内容を保存", method: :patch, class: "btn btn-success px-4 py-2 mt-2 mr-5" %>
        </span>
        <span>
          <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger px-4 py-2 mt-2 ml-5" %>
        </span>
        </div>
        
      </div>  
      
     
    </div>
    <% end %>
 </div>  