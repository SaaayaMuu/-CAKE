  <div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <p class="my-4">
          <span class="lead px-3">配送先登録/一覧</span>
        </p>
      </div>
    </div>
      <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
      
    <div class="row mb-3">
      <label for="inputPostalCode" class="col-sm-4 col-lg-3 col-xl-3 col-form-label">郵便番号(ハイフンなし)</label>
      <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
          <%= f.text_field :postal_code, autofocus: true, id:"postal_code", placeholder: "0000000", required: true %>
       </div>
    </div>
    <div class="row mb-3">
      <label for="inputAddress" class="col-sm-4 col-lg-3 col-xl-3 col-form-label">住所</label>
      <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
          <%= f.text_area :address, autofocus: true, id:"address", placeholder: "東京都渋谷区代々木", required: true, :size => "50%" %>
       </div>
    </div>
    <div class="row mb-3">
      <label for="inputName" class="col-sm-4 col-lg-3 col-xl-3 col-form-label">宛名</label>
      <div class="col-sm-8 col-lg-5 col-xl-5 col-md-7">
          <%= f.text_field :name, autofocus: true, id:"name", placeholder: "令和道子", required: true %>
          <span class="ml-5"><%= f.submit "新規登録", class: "btn btn-sm btn-success px-4 py-2" %></span>
      </div>
    </div>
    
    <% end %>
    <div class="col-lg-9 col-md-12 col-sm-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="title "width=100"">郵便番号</th>
          <th class="title "width=250"">住所</th>
          <th class="title "width=120"">宛名</th>
          <th class="title "width=240""></th>
        </tr>
      <% @addresses.each do |address| %>
      </thead>
      <tbody>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to edit_address_path(address.id), class: "btn btn-success mr-2" do %>編集する<% end %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
    
 </div>
