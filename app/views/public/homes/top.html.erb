<% content_for :css do %>
  <%= stylesheet_link_tag 'top' %>
<% end %>

<body>
<div class="container-fluid mt-5">
	<div class="row justify-content-center">
		<div class="col-xs-12 cover-img" style="background-image:url('https://img.pretty-online.jp/wp-content/uploads/2022/03/11194804/news_kineel_1.jpg');">
		  <div class="back">
		  	 <div class="cover-text text-center mt-5">
				  <p class="text-light">
				    ようこそ、ながのCAKEへ！<br>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品に閲覧はできますが、<br>
            購入には会員登録が必要になります。<br>
          </p>
        </div>
			</div>
		</div>
	</div>
</div>

<div class="row mb-5 justify-content-center">
  <h2 class="mt-5">新着商品</h2>
</div>

<div class="row justify-content-center">
  <% @items.each do |item| %>
    <%= link_to item_path(item.id),  class: "text-dark" do %>
    <div>
      <%= image_tag item.get_image, size:"200x200", class:"border mx-2" %>
      <div class="mx-2">
        <p class="font-weight-bold"><%= item.name %></p>
        <p class="font-weight-bold"><%= "￥" %><%= item.with_tax_price %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<div class="text-right m-5">
<p><%= link_to "全ての商品を見る>", items_path %></p>
</div>

</body>