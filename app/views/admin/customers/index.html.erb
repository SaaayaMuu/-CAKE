<div class="col-md-8 offset-md-2">
  　<p>
      <span class="lead px-3">会員一覧</span>
    </p>
    
    <table class="table">
      <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
      <% @customers.each do |customer| %>
      </thead>
      <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id), class: "text-dark" do  %>
            <%= customer.last_name %><%= customer.first_name %><% end %></td>
        <td><%= customer.email %></td>
        <th>
          <%= customer.is_deleted ? '有効' : '退会' %>
        </th>
      </tr>
      </tbody>
      <% end %>
    </table>
</div>