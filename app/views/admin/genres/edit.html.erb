

<div class="container mt-4">
  
  <div class="row mb-3">
    <p class="col-8 col-sm-7 col-xl-4"><span class="lead">ジャンル編集</span></p>
  </div>
  <%= form_with model: @genre, url: admin_genre_path do |f| %>
  <div class="row mb-3">
    <label for="genre_name" class="col-sm-3 col-md-3 com-lg-1 col-xl-2">ジャンル名</label>
    <div>
      <%= f.text_field :name, autofocus: true, id:"genre_Name", placeholder: "Name" %>
    </div>
    <div class="form_action">
      <%= f.submit "変更を保存", method: :patch, class: "btn btn-success ml-4" %>
    </div>
　</div> 
 　<% end %>
</div>