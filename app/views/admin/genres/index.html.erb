
<div class="container mt-4">
  
  <div class="row mb-3">
      <p class="col-8 col-sm-7 col-xl-4"><span class="lead">ジャンル一覧・追加</span></p>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
  <div class="row mb-3">
    <label for="genre_name" class="col-sm-3 col-md-3 com-lg-1 col-xl-2">ジャンル名</label>
    <div>
      <input class="form-control genre_name" type="text" required="required" name="genre[name]" id="genre_name" >
    </div>
    <div class="form_action">
      <%= f.submit "登録する", class: "btn btn-success ml-4" %>
    </div>
  </div> 
 　<% end %>
　

  <div class="col-sm-7 col-md-6">
　  <table class="table">
　    <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td><%= genre.name %></td>
        <td></td>
        <td></td>
        <td><%= link_to edit_admin_genre_path(genre.id), class: "btn btn-success" do %>編集する<% end %></td>
      </tr>
    </tbody>
  <% end %>
　 </table>
　 
 </div>
　
　
</div>