

<div class="col-md-8 offset-md-1">
    <div class="my-3"><span class="bg-secondary lead">商品一覧</span></div>
    <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
      <% @items.each do |item| %>
      </thead>
      <tbody>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
        <th><%= item.genre.name %></th>
        <th></th>
      </tr>
      </tbody>
      <% end %>
    </table>
</div>