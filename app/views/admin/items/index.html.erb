

<div class="col-md-8 offset-md-2">
    <p class="my-4">
      <span class="lead px-3">商品一覧</span>
      <%=link_to new_admin_item_path, class: "btn btn-light shadow rounded-circle px-2 float-right" do %>＋<% end %>
    </p>
    
    <table class="table">
      <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
      <% @items.each do |item| %>
      </thead>
      <tbody>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item.id), class: "text-dark" do  %><%= item.name %><% end %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <%= item.is_active ? '販売中' : '販売停止中' %>
        </td>
      </tr>
      </tbody>
      <% end %>
    </table>
    <div class="row justify-content-center">
      <%= paginate @items %>
    </div>
</div>