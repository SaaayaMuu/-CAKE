<div class="container mt-4">
<div class="row">
<div class="mx-auto col-10 col-xl-6 col-lg-7 col-sm-9 pt-4">
  <h1 class="mt-3 border-bottom text-center mb-5">商品編集</h1>
  
  <%= form_with model: @item, url: admin_item_path do |f| %>

  <div class="form-group">
    <label for="item_Name">商品名</label><br>
    <%= f.text_field :name, autofocus: true, id:"item_Name", placeholder: "Name" %>
  </div>
  
  <div class="form-group">
  <label for="item_Introduction">商品説明</label><br>
  <%= f.text_area :introduction, autofocus: true, id:"item_Introduction", placeholder: "Introduction" %>
  </div>
  
  <div class="form-group">
    <label for="inputImage">画像</label><br>
    <%= f.file_field :image, placeholder: "Image", accept: "image/*" %>  
  </div>
  
  <span class="mt-5 border-bottom">ジャンル</span>
  <p><%= @item.genre.name %></p>
  
 
  <div class="form-group">
    <label for="item_Price">商品価格(税抜)</label><br>
    <%= f.text_field :price, autofocus: true, id:"item_Price", placeholder: "Price" %>
  </div>
  
 
  <div class="action text-right">
  <%= f.submit '変更', method: :patch, class: "btn btn-success" %>
  <%= link_to admin_item_path, method: :delete, class: "btn btn-danger" do %>Destroy<% end %>
  <%= link_to admin_item_path, class: "btn btn-warning text-light" do %>戻る
  <% end %>
  </div>
  
  <% end %>

</div>
</div>
</div>